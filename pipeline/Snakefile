GENOME = "yeast.fa"
INDEX = "yeast"
rule run: 
    input:
        fp = "{SAMPLE1}.bed",
	rna = "{SAMPLE2}.bed",
	genome = "yeast.fa"
    output: 
         "{SAMPLE1}_{SAMPLE2}.regression.log"
    params:
        prefix="{SAMPLE1}_{SAMPLE2}"

    shell: "python ../src/ribofilio.py -t {input.genome} -f {input.fp} -r {input.rna} -o {params.prefix}"

rule run_subset:
    input:
        fp = "{SAMPLE1}.bed",
        rna = "{SAMPLE2}.bed",
	smallset ="{SUBSET}.txt",
        genome = GENOME
    output:
         "{SAMPLE1}_{SAMPLE2}_{SUBSET}.regression.log"
    params:
        prefix="{SAMPLE1}_{SAMPLE2}_{SUBSET}"

    shell: "python ../src/ribofilio.py -t {input.genome} -f {input.fp} -r {input.rna} -s {input.smallset} -o {params.prefix}"
 

rule  shuffle: 
    input: 
        fp = "{SAMPLE}.bed",
        genome = GENOME
    params: 
        prefix = "{SAMPLE}_{IDX}" 
    output:
        "{SAMPLE}_{IDX}" 
      
    shell: 
        "python src/shuffle.py -t {input.genome} -b {input.fp} -o {params.prefix}"

rule tobed: 
	input: 
             "{SAMPLE}.bowtie2.bam" 
	output: 
	     "{SAMPLE}.bed"
	shell: 
            "bedtools bamtobed -i {input} > {output}"

rule index: 
     input: 
        genome = GENOME
     output: 
        INDEX
     shell: 
         "bowtie2-build {input.genome} {output} && touch {output}"
rule tobam:
      input:
          index  = INDEX,
          sample = "galore/{READS}_trimmed.fq.gz"
      output:
          "{READS}.bowtie2.bam"  
      shell: 
            "bowtie2 -x {input.index} -U {input.sample} -S | samtools view -S -b > {output}" 

  
